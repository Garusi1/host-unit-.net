<Window x:Class="PLWPF.MainWebManagerGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="ממשק עבור בעל אתר" Height="680" Width="1000">
    <Grid  x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="GuestsList" Content="{DynamicResource Guest Requests}" Grid.Column="2" Margin="20,20,10,10" Grid.RowSpan="2" Click="GuestsList_Click"></Button>
        <Button x:Name="HostingUnitList" Content="{DynamicResource HostingUnitList}" Grid.Column="1" Margin="20,20,10,10" Grid.RowSpan="2"></Button>
        <Button x:Name="OrderList" Content="{DynamicResource OrderList}" Grid.Column="0" Margin="20,20,10,10" Grid.RowSpan="2"></Button>
        <Button x:Name="HostsList" Content="{DynamicResource HostsList}" Grid.Column="3" Margin="20,20,10,10" Grid.RowSpan="2"></Button>
        <StackPanel x:Name="WMstackPannel"  Grid.Row="1" Grid.ColumnSpan="4" Orientation="Vertical"/>

    </Grid>
</Window>
